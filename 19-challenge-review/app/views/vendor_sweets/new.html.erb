<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <%end%>
<% end %>

<%= form_for @vendor_sweet do |form| %>
    <%= form.label :price %>
    <%= form.number_field :price %>

    <%= form.collection_select :vendor_id, Vendor.all, :id, :name %>
    <%= form.collection_select :sweet_id, Sweet.all, :id, :name %>

    <%= form.submit %>
<% end %>